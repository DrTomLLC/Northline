import { VerticalLayout, HorizontalLayout, LineEdit, Button, ListView } from "std-widgets.slint";

export component MainWindow inherits Window {
    preferred-width: 1200px;
    preferred-height: 800px;
    title: "Northline";

    in-out property<string> current_query;

    callback submit-query();

    HorizontalLayout {
        // Sidebar placeholder
        Rectangle {
            width: 260px;
        }

        // Main chat area
        VerticalLayout {
            // Messages placeholder for now
            Rectangle {
                height: 1s;
            }

            HorizontalLayout {
                LineEdit {
                    text <=> current_query;
                    accepted => { submit-query(); }
                }
                Button {
                    text: "Ask";
                    clicked => { submit-query(); }
                }
            }
        }

        // Right pane placeholder
        Rectangle {
            width: 280px;
        }
    }
}
